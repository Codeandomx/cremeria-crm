<?xml version='1.0' encoding='UTF-8' ?>
<!-- was: <?xml version="1.0" encoding="UTF-8"?> -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd
       http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-4.0.xsd
       http://www.springframework.org/schema/mvc 
       http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd">

    <bean class="org.springframework.web.servlet.mvc.support.ControllerClassNameHandlerMapping"/>

    <!--
    Most controllers will use the ControllerClassNameHandlerMapping above, but
    for the index controller we are using ParameterizableViewController, so we must
    define an explicit mapping for it.
    -->
    <bean id="urlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <props>
                <prop key="index.htm">indexController</prop>
                <prop key="about.htm">aboutController</prop>
                <prop key="menu.htm">menuController</prop>
                <prop key="products.htm">productsController</prop>
                <prop key="cart.htm">cartController</prop>
                <prop key="contact.htm">contactController</prop>
                <prop key="login.htm">loginController</prop>
                <prop key="admin.htm">adminController</prop>
            </props>
        </property>
    </bean>

    <bean id="viewResolver"
          class="org.springframework.web.servlet.view.InternalResourceViewResolver"
          p:prefix="/WEB-INF/views/"
          p:suffix=".jsp" />

    <!--
    The index controller.
    -->
    <bean name="aboutController"
          class="com.sinaloense.Views.AboutController"
    />
    
    <bean name="menuController"
          class="com.sinaloense.Views.MenuController"
    />
    
    <bean name="productsController"
          class="com.sinaloense.Views.ProductsController"
    />
    
    <bean name="cartController"
          class="com.sinaloense.Views.CartController"
    />
    
    <bean name="contactController"
          class="com.sinaloense.Views.ContactController"
    />
    
    <bean name="loginController"
          class="com.sinaloense.Views.LoginController"
    />
    
    <bean name="adminController"
          class="com.sinaloense.Views.AdminController"
    />
    
    <bean name="indexController"
          class="org.springframework.web.servlet.mvc.ParameterizableViewController"
          p:viewName="index" />
    

    <mvc:resources mapping="reources/**" location="resources/" />
    <mvc:annotation-driven />
    
</beans>
